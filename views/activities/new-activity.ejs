<h2>New activitie</h2>

<form action="/activities/create" method="POST" enctype="multipart/form-data">
    <label> Name:
        <input type="text" name = "name">
    </label><br>
    <label> Description:
        <input type="text" name = "description">
    </label><br>
    <label> Duration:
        <select name="duration" id="duration">
            <option value="5">5 Minutos</option>
            <option value="15">15 Minutos</option>
            <option value="30">30 Minutos</option>
            <option value="60">60 Minutos</option>
        </select>
    </label><br>
    <label> Age:
        <select name="age" id="age" multiple>
            <option value="0-1">0-1 A単os</option>
            <option value="1-2">1-2 A単os</option>
            <option value="3-4">3-4 A単os</option>
            <option value="5-6">5-6 A単os</option>
        </select>
    </label><br>
    <label> Materials:
        <input type="text" name = "materials">
    </label><br>
    <label> Skills:
        <input type="text" name = "skills">
    </label><br>
    <label> Steps:
        <input type="text" name = "steps">
    </label><br>
    <label> Image:
        <input type="file" name="imageUrl" accept="image/png, image/jpg" />
    </label>
    
    
    
    <button type="submit">Create</button>
    </form>