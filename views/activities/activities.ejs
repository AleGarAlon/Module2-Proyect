<%- include('../partials/head') %>
<%- include('../partials/navbar-profile') %>

<div class="page-container">
  
  <div class="tittle-div z-depth-2">
    <header id="profile-id" class="tittle-div center">
      <h2 class="body-main-h2 h-shadow-w">Activities</h2>
    </header>
  </div>

  <main>

    <!-- Commented out but not deleted, just in case we need to review previous setup
      <% activities.forEach(activity => { %>
      <div class="gallery">
        <img class="gallery img" src="<%-activity.image%>" alt="activityImg">
      <h3><%- activity.name %></h3>
      </div>  
      <% }) %>
      -->

    <div class="gallery">
      <% activities.forEach(activity => { %>

      <div class="act-card ">
        <div class="card act-car hoverable z-depth-1">
          <div class="card-image">
            <!-- insert activity.image when ready to merge with main branch-->
            <img src="<%- activity.image %>">
            <div class="activator waves-effect waves-light"></div>
          </div>

          <div class="card-content">
            <span class="capitalize card-title activator"><%- activity.name %></span>
            <h6><a class="click-for-more" href="/activities/<%- activity._id %>">Click here for more details</a></h6>
          </div>

          <div class="card-reveal">
            <span class="capitalize card-title"><%- activity.name %><i class="material-icons right">close</i></span>
            <p><%- activity.description %></p>
          </div>

        </div>

      </div>

      <% }) %>

    </div>

  </main>
  
</div>


<footer class="page-footer">
  <%- include('../partials/footer') %>
</footer>

<%- include('../partials/scripts') %>
