<%- include('../partials/head') %>
<%- include('../partials/navbar-profile') %>

<div id="body-id" class="container">

  <header id="profile-id" class="profile-body center">
    <h2>Add your child</h2>
  </header>

  <div class="card-panel">

    <main class="new-activity">

      <form action="/kids/<%- kid._id %>/update" method="POST">


        <div class="input-field">
          <input name="name" placeholder=" " id="name" type="text" class="validate">
          <label for="name">Name:</label>
        </div>

       
        <label for="form-select-2" class="choose-div label-bottom">Age:</label>
        <div class="choose-div checkbox-form">
          <p>
            <label>
              <input id="checkbox-1" type="checkbox" name="age" value="0-1">
              <span>0-1</span>
            </label>
          </p>
          <p>
            <label>
              <input id="checkbox-1" type="checkbox" name="age" value="1-2">
              <span>1-2</span>
            </label>
          </p>
          <p>
            <label>
              <input id="checkbox-1" type="checkbox" name="age" value="3-4">
              <span>3-4</span>
            </label>
          </p>
          <p>
            <label>
              <input id="checkbox-1" type="checkbox" name="age" value="5-6">
              <span>5-6</span>
            </label>
          </p>
        </div>


        <!--<div class="image-field file-field input-field field-bottom">
          <div class="btn">
            <span>Photo</span>
            <input type="file" name="imageUrl" accept="image/png, image/jpg" />
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div>
        </div>-->

        <div class="button-center">
          <button class="btn waves-effect waves-light" type="submit">Add!
            <i class="material-icons right">send</i>
          </button>
        </div>

      </form>
    </main>
  </div>


  
</div>

<footer class="page-footer">
  <%- include('../partials/footer') %>
</footer>