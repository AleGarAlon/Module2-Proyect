<h1>Login</h1>

<form action="/auth/login" method="POST">

    <label > Email
        <input name="email" type="email" required>
    </label>
    <label > Password
        <input name="password" type="password" required>
    </label>
    <button type="submit">Login</button>
</form>

<% if(typeof errorMsg !== "undefined"){ %>

    <div class="bg-danger">
       <%-errorMsg%>
    </div>
   <% } %>