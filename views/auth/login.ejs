<%- include('../partials/head') %>

<nav id="nav-bar" class="nav-bar">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo"></a>
      <a href="#" data-target="mobile-demo" class="h-shadow-w sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="h-shadow-w right hide-on-med-and-down">
        <li id="Home"><a href="/">Back</a></li>
        <li id="sign-in"><a href="/auth/signup">Sign up</a></li>
      </ul>
    </div>
  </nav>

<body class="body-wrapper ">

  <div class="center-align">

    <div id="body-id" class="center-align ">

      <div class="tittle-div z-depth-2">
        <header id="profile-id" class="tittle-div center">
          <h2 class="body-main-h2 h-shadow-w">Log in</h2>
        </header>
      </div>
      
      
      <div class="card-panel form-card z-depth-3 small-screen">

        <form action="/auth/login" method="POST">

          <div class="input-field checkbox-form">
            <input id="email" type="email" name="email" placeholder=" " class="validate" required>
            <label for="name">Email</label>
          </div>

          <div class="input-field checkbox-form">
            <input id="password" type="password" name="password" placeholder=" " class="validate" required>
            <label for="name">Password</label>
          </div>
          
          <div class="button-center checkbox-form">
            <button class="btn waves-effect waves-light" type="submit">Login
              <i class="material-icons right">send</i>
            </button>

        </form>
        
<% if(typeof errorMsg !== "undefined"){ %>

  <div class="bg-danger">
     <%-errorMsg%>
  </div>
 <% } %>

      </div>

    </div>
    
    
  </div>

  <%- include('../partials/scripts') %>

</body>