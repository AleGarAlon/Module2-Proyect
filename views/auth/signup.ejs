<%- include('../partials/head') %>

<nav id="nav-bar" class="nav-bar">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo"></a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li id="Home"><a href="/">Back</a></li>
        <li id="log-in"><a class="h-shadow-w" href="/auth/login">Login</a></li>
      </ul>
    </div>
  </nav>
  
  <body class="body-wrapper ">

    <div class="center-align">

      <div class="tittle-div z-depth-5">
        <header id="profile-id" class="tittle-div center">
          <h2 class="body-main-h2 h-shadow-w">Sign up</h2>
        </header>
      </div>
        
        <div class="card-panel form-card z-depth-3 small-screen">
          <form action="/auth/signup" method="POST">

              <div class="input-field checkbox-form">
                <input id="name" type="text" name="name" placeholder=" " class="validate" required>
                <label for="name">Name</label>
              </div>

              <div class="input-field checkbox-form">
                <input id="email" type="email" name="email" placeholder=" " class="validate" required>
                <label for="name">Email</label>
              </div>
      
              <div class="input-field checkbox-form">
                  <input id="password" type="password" name="password" placeholder=" " class="validate" required>
                  <label for="name">Password</label>
              </div>
      
              <% if (typeof errorMessage !== 'undefined' && errorMessage !== null) { %>
                  <p class="error-message"><%= errorMessage %></p>
              <% } %>
      
              <div class="button-center checkbox-form">
                  <button class="btn waves-effect waves-light" type="submit">Sign up
                      <i class="material-icons right">send</i>
                  </button>
              </div>
          </form>
        </div>
      </div>
      
      
    </div>

    <%- include('../partials/scripts') %>

  </body>